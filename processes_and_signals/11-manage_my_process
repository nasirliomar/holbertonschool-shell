#!/usr/bin/env bash
# Init script to start, stop, and restart manage_my_process

PID_FILE="/var/run/my_process.pid"
DIR="$(cd "$(dirname "$0")" && pwd)"
DAEMON="$DIR/manage_my_process"

SUDO=""
if [ "${EUID:-$(id -u)}" -ne 0 ]; then
  SUDO="sudo"
fi

do_start() {
  $SUDO sh -c "nohup \"$DAEMON\" >/dev/null 2>&1 & echo \$! > \"$PID_FILE\""
}

do_stop() {
  if $SUDO test -f "$PID_FILE"; then
    PID="$($SUDO cat "$PID_FILE" 2>/dev/null)"
    if [ -n "$PID" ]; then
      $SUDO kill "$PID" 2>/dev/null || true
    fi
    $SUDO rm -f "$PID_FILE"
  fi
}

case "${1:-}" in
  start)
    do_start
    echo "manage_my_process started"
    ;;
  stop)
    do_stop
    echo "manage_my_process stopped"
    ;;
  restart)
    do_stop
    do_start
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
