#!/usr/bin/env bash
# This script writes its PID to /var/run/myscript.pid and handles signals

PIDFILE1="/var/run/myscript.pid"
PIDFILE2="/run/myscript.pid"

write_pidfiles() {
    echo "$$" > "$PIDFILE2" 2>/dev/null || true
    echo "$$" > "$PIDFILE1" 2>/dev/null || true
}

cleanup_and_exit() {
    rm -f "$PIDFILE1" "$PIDFILE2"
    exit 0
}

on_sigterm() {
    echo "I hate the kill command"
    cleanup_and_exit
}

on_sigint() {
    echo "Y U no love me?!"
}

on_sigquit() {
    cleanup_and_exit
}

trap on_sigterm SIGTERM
trap on_sigint SIGINT
trap on_sigquit SIGQUIT

write_pidfiles

while true
do
    echo "To infinity and beyond"
    sleep 2
done
