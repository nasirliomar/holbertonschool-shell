#!/usr/bin/env bash
# This script starts/stops/restarts manage_my_process using a PID file

PID_FILE="/var/run/my_process.pid"
CMD="./manage_my_process"

start_process() {
    $CMD &
    echo $! > "$PID_FILE"
}

stop_process() {
    if [ -f "$PID_FILE" ]
    then
        kill "$(cat "$PID_FILE")" 2>/dev/null
        rm -f "$PID_FILE"
    fi
}

case "$1" in
    start)
        start_process
        echo "manage_my_process started"
        ;;
    stop)
        stop_process
        echo "manage_my_process stopped"
        ;;
    restart)
        stop_process
        start_process
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
