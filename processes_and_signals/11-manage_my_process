#!/usr/bin/env bash
# Simple init-style script to manage manage_my_process

PID_FILE="/var/run/my_process.pid"
DAEMON="./manage_my_process"

start_process() {
  sudo bash -c "nohup $DAEMON >/dev/null 2>&1 & echo \$! > $PID_FILE"
  echo "manage_my_process started"
}

stop_process() {
  if [ -f "$PID_FILE" ]; then
    PID="$(cat "$PID_FILE")"
    sudo kill "$PID" 2>/dev/null || true
    sudo rm -f "$PID_FILE"
  fi
  echo "manage_my_process stopped"
}

case "${1:-}" in
  start)
    start_process
    ;;
  stop)
    stop_process
    ;;
  restart)
    stop_process
    start_process
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
