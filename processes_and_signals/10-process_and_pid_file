#!/usr/bin/env bash
# This script writes its PID to /var/run/myscript.pid and handles signals

pidfile="/run/myscript.pid"

cleanup_and_exit() {
    rm -f "$pidfile"
    exit 0
}

on_sigint() {
    echo "Y U no love me?!"
}

on_sigterm() {
    echo "I hate the kill command"
    cleanup_and_exit
}

on_sigquit() {
    cleanup_and_exit
}

echo "$$" > "$pidfile"

trap on_sigint INT
trap on_sigterm TERM
trap on_sigquit QUIT

while true
do
    echo "To infinity and beyond"
    sleep 2
done
